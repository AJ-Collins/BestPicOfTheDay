<div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Create a New Post</h2>
    <form action="/posts" method="POST" enctype="multipart/form-data" class="space-y-4">
        <div>
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="image" id="image" required class="form-input">
        </div>
        <div>
            <label for="caption" class="form-label">Caption</label>
            <textarea name="caption" id="caption" rows="3" required class="form-input"></textarea>
        </div>
        <button type="submit" class="btn btn-blue w-full">Post Picture</button>
    </form>
    
    <% if (message) { %>
        <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            <%= message %>
        </div>
    <% } %>
</div>